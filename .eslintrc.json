{
  "extends": ["next/core-web-vitals", "next/typescript", "plugin:drizzle/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "project": "./tsconfig.json"
  },
  "plugins": [
      "@typescript-eslint",
      "drizzle"
  ],
 "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "rules": {
    "@typescript-eslint/no-empty-object-type": "off"
  }
}
